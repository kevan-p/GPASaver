<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company1.gpasaver">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.requests.MyRequestsActivity"
            android:label="@string/title_activity_my_requests"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".requestTutor" /> <!-- <activity android:name=".tutor" /> -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.profile.ProfileViewer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.profile.EditProfile"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.profile.ProfileView_Real"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.myClasses.ListTutorActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.review.RateFromProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddMyselfTutorActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.reply.ReplyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
